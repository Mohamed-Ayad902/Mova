<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.splash.SplashFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_170sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/splash_animation" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/stress"
        android:gravity="center"
        android:visibility="invisible"
        android:text="Your Movie Guide"
        android:textColor="@color/primary"
        android:textSize="@dimen/_30ssp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/animationView" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:background="@drawable/expanding_view_bg"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/animationView"
        app:layout_constraintEnd_toEndOf="@id/animationView"
        app:layout_constraintStart_toStartOf="@id/animationView"
        app:layout_constraintTop_toTopOf="@id/animationView" />
</androidx.constraintlayout.widget.ConstraintLayout>